                    </MenuItem>
                </Menu>

                <Grid x:Name="Disease_Grid_Search" Grid.Row="2" Visibility="Collapsed">
                    <!--Инфа для поиска-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--ФИО для поиска-->
                    <Label Grid.Row="0" Style="{StaticResource InfoField_Style}" FontSize="12">
                        Название:
                    </Label>
                    <RibbonTextBox Name="Disease_TextBox_SearchData" Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBox_Style}" FontSize="12" />
                    <Button Name="Disease_Button_SearchData" Click="Disease_Button_SearchData_Click" Grid.Row="2" Grid.ColumnSpan="2"  Content="Поиск" Style="{StaticResource Button_Style}" />
                </Grid>
                <!--Поиск-->

                <DataGrid Grid.Row="3" x:Name="Disease_DataGrid"
                      Style="{StaticResource DataGrid_Style}"
                      CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single"
                      SelectedCellsChanged="Disease_DataGrid_SelectedCellsChanged"
                      IsReadOnly="True"/>


                <Label Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource InfoTitle_Style}" FontSize="20">
                    Список заболеваний
                </Label>

